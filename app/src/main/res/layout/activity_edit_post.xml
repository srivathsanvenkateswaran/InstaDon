<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".AddNewPostActivity">

    <EditText
        android:id="@+id/postTextEditText"
        android:layout_width="00dp"
        android:layout_height="200dp"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:gravity="top"
        android:background="@drawable/rounded_rectangle_shape"
        android:hint="@string/post_hint"
        android:textColorHint="@color/materialDarkThemeWhiteGreyWithAlpha"
        android:textColor="@color/materialDarkThemeWhiteFontColor"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/updateTextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_text"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        app:backgroundTint="@color/materialDarkThemeFloatingActionButtonColor"
        android:background="@drawable/rounded_rectangle_shape"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/postTextEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>